--- glibc-2.31.orig/syscallas.S
+++ glibc-2.31/syscallas.S
@@ -3,9 +3,25 @@
 .weak syscalldb
 .type syscalldb,@function
 
+#if defined(__i386__) || defined(__x86_64__)
 syscalldb:
 	.cfi_startproc
 	syscall
 	retq
 	.cfi_endproc
 	.size syscalldb,.-syscalldb
+#elif defined(__powerpc64__)
+syscalldb:
+	.cfi_startproc
+	std %r0, -8(%r1)
+	mflr %r0
+	std %r0, 16(%r1)
+	ld %r0, -8(%r1)
+	sc
+	ld %r0, 16(%r1)
